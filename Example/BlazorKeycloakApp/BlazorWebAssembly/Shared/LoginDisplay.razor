<AuthorizeView>
    <Authorized>
        <div class="auth-item">
            Hello, @context.User.Identity?.Name!
            <a href="authentication/logout">Log out</a>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="auth-item">
            <a href="authentication/login">Log in</a>
        </div>
    </NotAuthorized>
</AuthorizeView>
